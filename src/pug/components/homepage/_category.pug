mixin bfcmCategory(classMod, img, badge, title, info, descArr)
  a.bfcm-category__box(href='#' class!= "bfcm-category__box-" + classMod title='')
    .bfcm-category__box-head
      .bfcm-category__box-image
        img(src='img/' + img)
    .bfcm-category__box-body
      p.bfcm-category__box-badge!= badge
      p.bfcm-category__box-title!= title
      if(info)
        p.bfcm-category__box-info!= info
      each val, idx in descArr
        p.bfcm-category__box-desc!= val

